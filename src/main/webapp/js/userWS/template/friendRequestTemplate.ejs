<div class="modal fade modal-dialog-request" id="friendRequest" tabindex="-1" role="dialog" aria-labelledby="friend request" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><%= json.profile.friendRequestTitle %></h4>
            </div>
            <div class="modal-body">
                <section class="panel">
                    <div class="panel-body">
                        <div class="col-lg-12">
                            <div id="ws-request-header" class="ws-request-header center">
                                <div class="center">
                                    <img class="ws-pic ws-request-pic" alt="user image" src="<%=path%>">
                                </div>
                                <div class="center">
                                    <p class="ws-request-name">
                                        <span id="ws-request-first-name"><%= firstName %></span>
                                        <span id="ws-request-last-name"><%=lastName %></span>
                                    </p>
                                </div>
                                <hr>
                                <div class="center">
                                    <% if (pendingRequestApprove) { %>
                                        <span><%= json.profile.pendingRequestApprove %></span>
                                    <% } else if (pendingRequestSend) {  %>
                                        <span><%= json.profile.pendingRequestSend %></span>
                                    <% } else { %>
                                        <button class="btn btn-white sendRequest"><%= json.profile.sendRequest %></button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>