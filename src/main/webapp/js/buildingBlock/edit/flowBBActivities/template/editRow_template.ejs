<tr>
    <td class="center">
        <div class="imgNewFlowDiv">
            <img id="img_bb" src="<%=imageURI%>" alt='Activity image' width="20px" height="20px">
            <figcaption>
                <a id='imgFlowSelect' href='#modalActivityImg' data-toggle='modal' required><%=json.button.select%></a>
            </figcaption>
        </div>
    </td>
    <td class="center">
        <div>
            <div class="form-group">
                <div class="col-lg-12">
                    <input id="actFlowName" name="actFlowName" type="text" class="form-control focusedInput col-xs-4" value="<%= name %>">
                </div>
            </div>
        </div>
    </td>
    <td class="center">
        <div>
            <button id='editActFlow' class='btn btn-primary btn-xs'>
                <i class='fa fa-floppy-o'></i>
            </button>
            <button id='cancelEditActFlow' class='btn btn-danger btn-xs'>
                <i class='fa fa-times'></i>
            </button>
        </div>
    </td>
