<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modalValve" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button id ="closeModal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  					<h4 class="modal-title">Valve Activities</h4>
			</div>
			
			<div class="modal-body">
				<div class="form">
					<form class="cmxform form-horizontal tasi-form" id="formValve" method="get" action="">
                        
						<h4 style="font-weight:bold;">Input Activities</h4>				
                        <% if(listIncomingAct.length != 0){ %> 
                        	<h6>Select the input activities needed in this valve and which are going to be manually checked by the responsible:</h6><br>
                            <% $.each(listIncomingAct, function(j, activity){ %>
                                <div class="form-group">
                                    <div class=" col-lg-1 checkbox"> 
                                        <% if(activity.checked == false){ %> 
                                            <input name="act<%= activity.id %>" id="act<%= activity.id %>" class="valve-checkbox" type="checkbox" />
                                        <% }else{ %>
                                            <input name="act<%= activity.id %>" id="act<%= activity.id %>" class="valve-checkbox" type="checkbox" checked />
                                        <% } %>
                                    </div>
                                    <img src="<%= activity.url %>" title="" style="height:35px; width:35px; margin-right:4%;float:left;">
                                    <label for="act<%= activity.id %>" class="col-lg-5 col-sm-2 control-label"><%= activity.description %></label>
                                    <label for="req<%= activity.id %>" class="col-lg-3 col-sm-2 control-label">Manually checked:</label>
                                    <div class=" col-lg-1 checkbox">
                                        <% if(activity.required){ %> 
                                            <input name="req<%= activity.id %>" id="req<%= activity.id %>" class="valve-checkbox" type="checkbox" checked />
                                        <% }else{ %>
                                            <input name="req<%= activity.id %>" id="req<%= activity.id %>" class="valve-checkbox" type="checkbox" />
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        <% }else{ %>
                            <div class="form-group">
                                <label class="col-lg-10 col-sm-2 control-label">No data found</label>
                            </div>
                        <% } %>
                        
                        <h4 style="font-weight:bold;">Output Activities</h4>                  
                        <% if(listOutgoingAct.length != 0){ %> 
                        	<h6>Select the output activities needed in this valve and which are going to be manually checked by the responsible:</h6><br>
                            <% $.each(listOutgoingAct, function(j, activity){ %>
                                <div class="form-group">
                                    <div class=" col-lg-1 checkbox">
                                        <% if(activity.checked == false){ %> 
                                            <input name="act<%= activity.id %>" id="act<%= activity.id %>" class="valve-checkbox" type="checkbox"/>
                                        <% }else{ %>
                                            <input name="act<%= activity.id %>" id="act<%= activity.id %>" class="valve-checkbox" type="checkbox" checked />
                                        <% } %>
                                    </div>
                                    <img src="<%= activity.url %>" title="" style="height:35px; width:35px; margin-right:4%;float:left;">
                                    <label for="act<%= activity.id %>" class="col-lg-5 col-sm-5 control-label"><%= activity.description %></label>
                                    <label for="req<%= activity.id %>" class="col-lg-3 col-sm-3 control-label">Manually checked:</label>
                                    <div class=" col-lg-1 checkbox">
                                        <% if(activity.required){ %> 
                                            <input name="req<%= activity.id %>" id="req<%= activity.id %>" class="valve-checkbox" type="checkbox" checked />
                                        <% }else{ %>
                                            <input name="req<%= activity.id %>" id="req<%= activity.id %>" class="valve-checkbox" type="checkbox" />
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        <% }else{ %>
                            <div class="form-group">
                                <label class="col-lg-10 col-sm-2 control-label">No data found</label>
                            </div>
                        <% } %>
                        
                        <h4 style="font-weight:bold;">Flow Building Blocks</h4>
                        
                        <% if(listFlowBB.length != 0){ %> 
                            <% $.each(listFlowBB, function(l, flowBB){ %>
                                <div class="form-group">
                                    <label id='idFlowBB' style='display:none'><%= flowBB.bb.id %></label>
                                    <button id='deleteFlowBB' class='btn btn-danger btn-xs btnDelFLBB' style="margin-left:3%; margin-right:1%; margin-top:3%; float:left;"><i class='fa fa-trash-o'></i></button>
                                    <button id='btnFlBBInfo' class='btn btn-primary btn-xs btnOpenFLBB' style="margin-right:5%; margin-top:3%; float:left;"><i class='fa fa-pencil-square-o'></i></button>
                                    <img src="<%= flowBB.bb.url %>" title="" style="height:35px; width:35px; margin-right:4%;float:left;margin-top:10px;">
                                    <label style="float:left; width:33%; margin-top:3%;"><%= flowBB.bb.name %></label>
                                    <label for="reqfl<%= flowBB.bb.id %>" class="col-lg-3 col-sm-3 control-label" style="margin-top:1.5%;">Manually checked:</label>
                                    <div class=" col-lg-1 checkbox" style="margin-top:1.5%;" >
                                        <% if(flowBB.required){ %> 
                                            <input name="reqfl<%= flowBB.bb.id %>" id="reqfl<%= flowBB.bb.id %>" class="valve-checkbox" type="checkbox" checked/>
                                        <% }else{ %>
                                            <input name="reqfl<%= flowBB.bb.id %>" id="reqfl<%= flowBB.bb.id %>" class="valve-checkbox" type="checkbox" />
                                        <% } %>
                                    </div>
                                </div>

                            <% }); %>
                        <% }else{ %>
                            <div class="form-group">
                                <label class="col-lg-10 col-sm-2 control-label">No data found</label>
                            </div>
                        <% } %>
						
					</form>   
				</div>

			</div>

			<div class="modal-footer">
				<button id="btnSaveValve" type="button" data-dismiss="modal" class="btn btn-primary">Save</button>
  				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>	
			</div>
            
		</div>
	</div>
</div>