<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modalResponsible" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button id ="closeModal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  				<h4 class="modal-title">Building Block Dropped</h4>
			</div>
            
			<div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <div class="panel-body">
                                <div class="task-progress" style="float:none;">
                                    <h1>Complete the Information</h1>
                                    <p>That information is used to manage the instance of your Building Block on the loop</p>
                                </div>
                                <form class="form-horizontal tasi-form" id="formResponsible" method="get" action="">
                                    <div class="form-group">
                                        <label for="responsibleBB" class="control-label col-lg-4" data-trigger="hover" data-toggle="popover" title="Responsible" data-content="The responsible is the person in charge of this building block in the loop"><span class="span-dotted">Responsible:</span></label>
                                        <br><br>
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-10">
                                                    <select class="form-control input-sm m-bot15 selectUsers" name="responsibleBB" id="responsibleBB">
                                                        <% $.each(listMembers, function(i, user){ %> 
                                                            <option value="<%= listMembers[i].user.id %>"> <%= listMembers[i].user.firstName +  ' ' + listMembers[i].user.lastName  %> </option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="leadTimeBB" class="control-label col-lg-4" data-trigger="hover" data-toggle="popover" title="Lead Time" data-content="The lead-time is the time of an order in the building block"><span class="span-dotted">Lead Time:</span></label>
                                        <br><br>
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-xs-6">
                                                    <input name="leadTimeBB" id="leadTimeBB" type="text" class="form-control" value="">
                                                </div>
                                                <div class="col-xs-6">
                                                    <select name="typeLeadTimeBB" id="typeLeadTimeBB" class="form-control m-bot15">
                                                        <% $.each(listTypes, function(i, type){ %>
                                                            <option value="<%= type.value %>"><%= type.text %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
					           </form>
				            </div>
                        </section>
                    </div>
                </div>
			</div>
			<div class="modal-footer">
				<button id="saveRespData" type="submit" class="btn btn-primary">Accept</button>
                <button id="closeBtn" type="button" class="btn btn-default" data-dismiss="modal"><%= json.button.close %></button>
			</div>
		</div>
	</div>
</div>